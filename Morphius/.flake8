[flake8]
max-line-length = 150

exclude =
    .git,
    __pycache__,
    ./utils/__pycache__,
    ./payloads/,
    ./config/__pycache__,
    ./manager/__pycache__,
    venv/,
    env/,
    build/,
    dist/

ignore =
    E203, E302, E305, E501,
    W291, W503, W605

max-complexity = 10

max-errors = 10
